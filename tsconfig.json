{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}